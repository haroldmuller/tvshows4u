<div class="container" style="text-align:left">
  <%= form_for tv_show, :url => @url, html: { multipart: true } do |f| %>
    <% if tv_show.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(tv_show.errors.count, "error") %> prohibited this tv_show from being saved:</h2>

        <ul>
        <% tv_show.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="field">
      <%= f.label :name %>
      <br>
      <%= f.text_field :name, style: "color:rgb(38, 38, 38)" %>
    </div>

    <div class="field">
      <%= f.label :description %>
      <br>
      <%= f.text_area :description, cols: 40, rows: 8, style: "color:rgb(38, 38, 38)" %>
    </div>

    <div class="field">
      <%= f.label :country %>
      <br>
      <%= f.text_field :country, style: "color:rgb(38, 38, 38)" %>
    </div>

    <div class="field">
      <%= f.label :language %>
      <br>
      <%= f.text_field :language, style: "color:rgb(38, 38, 38)" %>
    </div>

    <div class="field">
      <%= f.label "Trailer URL" %>
      <br>
      <%= f.text_field :url, style: "color:rgb(38, 38, 38)" %>
    </div>

    <div class="field">
      <%= f.label :gender %>
      <br>
      <%= f.collection_select(:gender_id, Gender.all, :id, :gender) %>
    </div>

    <div class="field">
      <%= f.label :director %>
      <br>
      <%= f.collection_select(:director_id, Director.all, :id, :set_complete_name) %>
    </div>

    <div class="field">
      <%= f.label :cover %>
      <br>
      <%= f.file_field :cover %>
    </div>


    <br>
    <div class="actions" style="text-align:left">
      <%= f.submit "Save", class: "btn btn-danger", style: "color:white" %>
    </div>

  <% end %>
</div>
